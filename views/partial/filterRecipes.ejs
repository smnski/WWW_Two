<!-- Filter Modal -->
<div class="modal fade" id="filterRecipesModal" tabindex="-1" aria-labelledby="filterRecipesModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header d-flex justify-content-between align-items-center">
        <h5 class="modal-title" id="filterRecipesModalLabel">Filter Recipes</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/recipes/filter" method="GET">
          <!-- Filter by Recipe Name -->
          <div class="mb-3">
            <label for="recipeName" class="form-label">Recipe Name</label>
            <input type="text" class="form-control" id="recipeName" name="recipeName" placeholder="Enter part of the recipe name">
          </div>

          <!-- Inline Min-Max Fields for Calories -->
          <div class="mb-3">
            <label class="form-label">Calories</label>
            <div class="d-flex gap-2">
              <input type="number" class="form-control" id="minCalories" name="minCalories" placeholder="Min">
              <input type="number" class="form-control" id="maxCalories" name="maxCalories" placeholder="Max">
            </div>
          </div>

          <!-- Inline Min-Max Fields for Protein -->
          <div class="mb-3">
            <label class="form-label">Protein</label>
            <div class="d-flex gap-2">
              <input type="number" class="form-control" id="minProtein" name="minProtein" placeholder="Min">
              <input type="number" class="form-control" id="maxProtein" name="maxProtein" placeholder="Max">
            </div>
          </div>

          <!-- Inline Min-Max Fields for Carbs -->
          <div class="mb-3">
            <label class="form-label">Carbs</label>
            <div class="d-flex gap-2">
              <input type="number" class="form-control" id="minCarbs" name="minCarbs" placeholder="Min">
              <input type="number" class="form-control" id="maxCarbs" name="maxCarbs" placeholder="Max">
            </div>
          </div>

          <!-- Inline Min-Max Fields for Fats -->
          <div class="mb-3">
            <label class="form-label">Fats</label>
            <div class="d-flex gap-2">
              <input type="number" class="form-control" id="minFats" name="minFats" placeholder="Min">
              <input type="number" class="form-control" id="maxFats" name="maxFats" placeholder="Max">
            </div>
          </div>

          <button type="submit" class="btn btn-primary">Apply Filters</button>
        </form>
      </div>
    </div>
  </div>
</div>
