<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recipes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/recipesStyles.css" rel="stylesheet">
</head>

<body class="bg-light">
  <div class="container py-4">
    <h1 class="text-center mb-4">Recipes</h1>

    <div class="d-flex justify-content-center mb-4">
      <a href="/recipes/add" class="me-3">
        <button class="btn btn-primary">Add New Recipe</button>
      </a>
      <a href="/recipes/filter">
        <button class="btn btn-secondary">Filter Recipes</button>
      </a>
    </div>

    <div class="row g-4">
      <% if (recipes.length > 0) { %>
        <% recipes.forEach(recipe => { %>
          <div class="col-md-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= recipe.name %></h5>
                <p class="card-text">Calories: <%= recipe.calories %></p>
                <p class="card-text">Protein: <%= recipe.protein %>g</p>
                <p class="card-text">Carbohydrates: <%= recipe.carbohydrates %>g</p>
                <p class="card-text">Fats: <%= recipe.fats %>g</p>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12">
          <p class="text-center">No recipes found!</p>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
